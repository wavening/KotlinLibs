<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RadioGroup
            android:id="@+id/app_fragment_child_use_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
        <RadioButton
                android:id="@+id/app_fragment_child_use_radio_first"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/TabRadioButtonStyle"
                android:layout_weight="1"/>
        <RadioButton
                android:id="@+id/app_fragment_child_use_radio_second"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/TabRadioButtonStyle"
                android:layout_weight="1"/>
        <RadioButton
                android:id="@+id/app_fragment_child_use_radio_third"
                android:layout_width="0dp"
                style="@style/TabRadioButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
    </RadioGroup>
    <android.support.v4.view.ViewPager
            android:id="@+id/app_fragment_use_child_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>